{
  "name": "@pelatform/ui.base",
  "version": "0.1.10",
  "description": "Base components of the Pelatform UI Library.",
  "author": "Pelatform",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    "./css": "./dist/style.css",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "clean:all": "rimraf .turbo dist node_modules",
    "dev": "tsup --watch",
    "build": "tsup && cp src/style.css dist/style.css",
    "types:check": "tsc --noEmit"
  },
  "repository": "github:pelatformlabs/ui",
  "homepage": "https://github.com/pelatformlabs/ui",
  "bugs": {
    "url": "https://github.com/pelatformlabs/ui/issues"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "pelatform",
    "ui",
    "react",
    "nextjs",
    "vite",
    "components",
    "base ui"
  ],
  "dependencies": {
    "@base-ui-components/react": "1.0.0-rc.0",
    "@tanstack/react-form": "^1.28.0",
    "react-phone-number-input": "^3.4.14"
  },
  "devDependencies": {
    "@pelatform/tsconfig": "^0.1.4",
    "@pelatform/ui.general": "workspace:*",
    "@pelatform/utils": "^1.0.11",
    "@types/react": "^19.2.10",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@pelatform/ui.general": ">=0.1.0",
    "@pelatform/utils": ">=1.0.6",
    "lucide-react": ">=0.5.0",
    "react": ">=18.0.0 || >=19.0.0-rc.0",
    "react-hook-form": ">=7.5.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": "biome check --write --no-errors-on-unmatched",
    "*.{md,yml,yaml}": "prettier --write",
    "*.{json,jsonc,html}": "biome format --write --no-errors-on-unmatched"
  }
}
