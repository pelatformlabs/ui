{
  "name": "pelatform-ui",
  "version": "1.1.17",
  "description": "A Modern and Minimal React UI Library built with TailwindCSS.",
  "author": "Pelatform",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    "./css": "./css/theme.css",
    "./css/*": "./css/components/*.css",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./animation": {
      "types": "./dist/animation.d.ts",
      "default": "./dist/animation.js"
    },
    "./aria": {
      "types": "./dist/aria.d.ts",
      "default": "./dist/aria.js"
    },
    "./base": {
      "types": "./dist/base.d.ts",
      "default": "./dist/base.js"
    },
    "./default": {
      "types": "./dist/default.d.ts",
      "default": "./dist/default.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "default": "./dist/hooks.js"
    },
    "./components": {
      "types": "./dist/components.d.ts",
      "default": "./dist/components.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "clean:all": "rimraf .turbo dist node_modules",
    "dev": "tsup --watch",
    "build": "tsup",
    "types:check": "tsc --noEmit"
  },
  "repository": "github:pelatformlabs/ui",
  "homepage": "https://github.com/pelatformlabs/ui",
  "bugs": {
    "url": "https://github.com/pelatformlabs/ui/issues"
  },
  "files": [
    "css",
    "dist"
  ],
  "keywords": [
    "pelatform",
    "ui",
    "react",
    "nextjs",
    "vite",
    "tailwindcss",
    "components",
    "animation"
  ],
  "dependencies": {
    "@pelatform/ui.animation": "workspace:*",
    "@pelatform/ui.aria": "workspace:*",
    "@pelatform/ui.base": "workspace:*",
    "@pelatform/ui.default": "workspace:*",
    "@pelatform/ui.general": "workspace:*",
    "@pelatform/ui.hook": "workspace:*",
    "@pelatform/utils": ">=1.0.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "radix-ui": "^1.4.3",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@pelatform/tsconfig": "^0.1.4",
    "@tanstack/react-query": "^5.90.17",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "lucide-react": "^0.562.0",
    "motion": "^12.26.2",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "sonner": "^2.0.7",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5.90.0",
    "lucide-react": ">=0.55.0",
    "motion": ">=12.2.0",
    "next-themes": ">=0.4.0",
    "sonner": ">=2.0.0",
    "react": ">=18.0.0 || >=19.0.0-rc.0",
    "react-dom": ">=18.0.0 || >=19.0.0-rc.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": "biome check --write --no-errors-on-unmatched",
    "*.{md,yml,yaml}": "prettier --write",
    "*.{json,jsonc,html}": "biome format --write --no-errors-on-unmatched"
  }
}
