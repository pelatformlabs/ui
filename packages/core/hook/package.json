{
  "name": "@pelatform/ui.hook",
  "version": "0.1.2",
  "description": "Hook components of the Pelatform UI Library.",
  "author": "Pelatform",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "clean:all": "rimraf .turbo dist node_modules",
    "dev": "tsup --watch",
    "build": "tsup",
    "types:check": "tsc --noEmit"
  },
  "repository": "github:pelatformlabs/ui",
  "homepage": "https://github.com/pelatformlabs/ui",
  "bugs": {
    "url": "https://github.com/pelatformlabs/ui/issues"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "pelatform",
    "ui",
    "react",
    "nextjs",
    "vite",
    "components"
  ],
  "devDependencies": {
    "@pelatform/tsconfig": "^0.1.4",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "react": "^19.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0 || >=19.0.0-rc.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": "biome check --write --no-errors-on-unmatched",
    "*.{md,yml,yaml}": "prettier --write",
    "*.{json,jsonc,html}": "biome format --write --no-errors-on-unmatched"
  }
}
